<header id="gtco-header" class="gtco-cover gtco-cover-sm" role="banner">
		<div class="overlay"></div>
		<div class="gtco-container">
			<div class="row">
				<div class="col-md-12 col-md-offset-0 text-center">
					<div class="row row-mt-15em">

						<div class="col-md-12 mt-text animate-box" data-animate-effect="fadeInUp">
							<h1>Bienvenido a <%= @camping.name %></h1>	
						</div>
						
					</div>
					
				</div>
			</div>
		</div>
	</header>
	
	<p><%= notice %></p>
    <p><%= alert %></p>
	
	<div class="gtco-section border-bottom">
		<div class="gtco-container">
			<div class="row">
				<div class="col-md-8 col-md-offset-2 text-center gtco-heading">
					<p><%= @camping.description %></p>
				</div>
			</div>
			<div class="row">
			
				<div class="col-md-4">
					
					<div class="price-box popular">
						<h2 class="pricing-plan">Precios</h2>
						<hr>
						<ul class="pricing-info">
							<h4>Temporada Alta: </h4>
							<li>Adulto: <%= @plan_high_a.price %></li>
							<li>Niño: <%= @plan_high_c.price %></li>
							<br>
							<h4>Temporada Baja: </h4>
							<li>Adulto: <%= @plan_low_a.price %></li>
							<li>Niño: <%= @plan_low_c.price %></li>
						</ul>
						<%= link_to 'Reserva Ahora!', new_camping_booking_path(@camping), class: "btn btn-primary btn-sm"%>
					</div>
				</div>
				<div class="col-md-4">
					<div class="price-box popular">
						<h2 class="pricing-plan">Servicios</h2>
						<hr>
						<ul class="pricing-info">
							<% @services.each do |servicio| %>
								<li><%= servicio.name %></li>
							<% end %>
						</ul>
						<%= link_to 'Reserva Ahora!', new_camping_booking_path(@camping), class: "btn btn-primary btn-sm"%>
					</div>
				</div>
				<div class="col-md-4">
					<div class="price-box popular">
						<h2 class="pricing-plan">Turismo:</h2>
						<hr>
						<ul class="pricing-info">
							<li><%= @camping.tourism %></li>
						</ul>
						<%= link_to 'Reserva Ahora!', new_camping_booking_path(@camping), class: "btn btn-primary btn-sm"%>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="gtco-section">
		<div class="gtco-container">
			<div class="row">
				<div class="col-md-8 col-md-offset-2 text-center gtco-heading animate-box">
					<h2>Reglas del Camping</h2>
				</div>
			</div>
			<div class="row">
				<div class="col-md-8 col-md-offset-2">
					<ul class="fh5co-faq-list">
						<li class="animate-box">
							<p><%= @camping.rules %></p>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>

	<div class="gtco-section">
		<div class="gtco-container">
			<div class="row">
				<div class="col-md-8 col-md-offset-2 text-center gtco-heading animate-box">
					<h2>Opiniones Usuarios</h2>
				</div>
			</div>
			<div class="row">
				<div class="col-md-8 col-md-offset-2">
					<ul class="price-box popular">
						<% @reviews.each do |review| %>
								<h4><%= review.title %>  <%= review.created_at.strftime("%d-%m-%Y--%H:%M:%S") %>:</h4>
								<p><%= review.comment %></p>
								<p>Evaluación: <%= review.ranking %></p>
						<% end %>
					</ul>
				</div>
			</div>
		</div>
	</div>
