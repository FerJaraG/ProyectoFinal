<header id="gtco-header" class="gtco-cover gtco-cover-sm" role="banner">
		<div class="overlay"></div>
		<div class="gtco-container">
			<div class="row">
				<div class="col-md-12 col-md-offset-0 text-center">
					<div class="row row-mt-15em">

						<div class="col-md-12 mt-text animate-box" data-animate-effect="fadeInUp">
							<h1>Encuentra tu Destino</h1>	
						</div>
						
					</div>
					
				</div>
			</div>
		</div>
	</header>
	<p><%= notice %></p>
    <p><%= alert %></p>
	<div class="gtco-section">
		<div class="gtco-container">
			<div class="row">
				<div class="col-md-8 col-md-offset-2 text-center gtco-heading">
					<h2>Encuentra tu Camping</h2>
				</div>
			</div>

			<div class="row">
				<% @campings.each do |camping| %>
					<div class="col-lg-4 col-md-4 col-sm-6">
							<figure>
								<div class="overlay"></div>
								<%= image_tag 'magallanes.jpg', class: "img-responsive" %>
							</figure>
							<div class="fh5co-text">
								<h2><%= camping.name %></h2>
								<p><%= camping.description %></p>
								<%= link_to 'Ver Camping', camping_path(camping), class: "btn btn-dark"%>
								<br><br>
							</div>
					</div>
					<% end %>
			</div>
		</div>
	</div>