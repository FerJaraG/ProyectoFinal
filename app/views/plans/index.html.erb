<header id="gtco-header" class="gtco-cover gtco-cover-sm" role="banner">
		<div class="overlay"></div>
		<div class="gtco-container">
			<div class="row">
				<div class="col-md-12 col-md-offset-0 text-left">
					<div class="row row-mt-15em">

						<div class="col-md-7 mt-text animate-box" data-animate-effect="fadeInUp">
								
						</div>
						
					</div>
					
				</div>
			</div>
		</div>
	</header>
	
    <p><%= notice %></p>
    <p><%= alert %></p>

<div class="gtco-section">
		<div class="gtco-container">
			<div class="row">
				<div class="col-md-8 col-md-offset-2 text-center gtco-heading">
					<h2>Planes de tu Camping:</h2>
				</div>
			</div>
			<div class="row">
				<%if @plans.empty?%>
					<h4>Aun no tienes planes creados.</h4>
				<%else%>	
					<% @plans.each do |plan| %>
						<div class="col-lg-4 col-md-4 col-sm-6">
								<div class="price-box popular">
									<h3>Temporada <%= plan.season.name %></h3>
									<p><%= if plan.person_type == 'adult' then 'Adulto' else 'NiÃ±o' end %>: <%= plan.price %></p>
									<%= link_to 'Editar',  edit_camping_plan_path(@camping,plan), class: "btn btn-primary btn-sm"%>								
									<%= link_to 'Eliminar', camping_plan_path(@camping,plan), method: :delete, class: "btn btn-primary btn-sm"%>								
								</div>
								<br>
						</div>
					<% end %>
				<%end%>
			</div>
			<%= link_to 'Crear Plan',  new_camping_plan_path(@camping), class: "btn btn-primary btn-sm"%>
		</div>
	</div>

