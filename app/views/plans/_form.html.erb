<div class="gtco-section border-bottom">
		<div class="gtco-container">
			<div class="row">
				<div class="col-md-12">
					<div class="col-md-6 animate-box">
					<h3>Plan:</h3>
					<%= form_with(model: [@camping, @plan], local: true) do |f| %>

						<div class="row form-group">
							<div class="col-md-12">
								<%= f.label :person_type,'Tipo Persona:' %>
                                <%= f.select :person_type, Plan.person_types.keys, class: "form-control"  %>
                            </div>
						</div>

						<div class="row form-group">
							<div class="col-md-12">
                                <%= f.label :season, 'Temporada:' %>
                                <%= f.select :season_id, options_for_select(@seasons),{prompt: 'Seleccione Temporada'}, {id: 'season'}%>
                            </div>
						</div>

                        <div class="row form-group">
							<div class="col-md-12">
                                <%= f.label :price, 'Precio:' %>
                                <%= f.number_field :price, class: "form-control"%>
                            </div>
						</div>

						<div class="form-group">
                            <%= f.submit 'Guardar', class: "btn btn-primary"  %>
						</div>

					</form>	
                    <% end %>	
				</div>
				</div>
			</div>
		</div>
	</div>