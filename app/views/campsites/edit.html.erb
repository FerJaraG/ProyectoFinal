<h1>editar campsite</h1>

<div class="">
	<%= form_with(model: [@camping, @campsite], local: true) do |f| %>

		<div class="form-group">
			<%= f.label :identifier %>
			<%= f.text_field :identifier, autofocus: true %>
		</div>

		<div class="form-group">
			<%= f.label :description %>
			<%= f.text_area :description %>
		</div>

	    <div class="actions">
			<%= f.submit %>
		</div>
	<% end %>
</div>