<%= render 'shared/menu' %>
<main class="col-md-9 float-left col px-5 pl-md-2 pt-2 main">
<h1>editar campsite</h1>

<div class="">
	<%= form_with(model: [@camping, @campsite], local: true) do |f| %>

		<div class="form-group">
			<%= f.label :identifier %>
			<%= f.text_field :identifier, autofocus: true %>
		</div>

		<div class="form-group">
			<%= f.label :description %>
			<%= f.text_area :description %>
		</div>

	    <div class="actions">
			<%= f.submit %>
		</div>
	<% end %>
</div>
</main>